<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:background="@drawable/mid_gray_rounded_corners_border"
    android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/setWorkoutPlanButtonPopUp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/mid_gray_rounded_corners"
        android:backgroundTint="@color/shiny_green"
        android:text="SET"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toTopOf="@+id/workouts_spinner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="50dp"
        app:layout_constraintVertical_bias="0.771" />

    <Spinner
        android:id="@+id/workouts_spinner"
        android:layout_width="350dp"
        android:layout_height="41dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/mid_gray_rounded_corners"
        android:backgroundTint="@color/mid_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_goneMarginBottom="50dp" />

</androidx.constraintlayout.widget.ConstraintLayout>