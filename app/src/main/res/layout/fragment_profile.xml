<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/dark_black"
    tools:context=".fragments.ProfileFrag">


    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Following"
        android:textColor="@color/light_gray"
        app:layout_constraintEnd_toEndOf="@+id/followingTV"
        app:layout_constraintStart_toStartOf="@+id/followingTV"
        app:layout_constraintTop_toBottomOf="@+id/followingTV" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Workouts"
        android:textColor="@color/light_gray"
        app:layout_constraintEnd_toEndOf="@+id/workoutNrDisplay"
        app:layout_constraintStart_toStartOf="@+id/workoutNrDisplay"
        app:layout_constraintTop_toBottomOf="@+id/workoutNrDisplay" />

    <TextView
        android:id="@+id/followersTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="164dp"
        android:padding="5dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/apple_white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/profileBtn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/profileBtn"
        app:layout_constraintVertical_bias="0.232" />

    <TextView
        android:id="@+id/followingTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/apple_white"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@+id/workoutNrDisplay"
        app:layout_constraintHorizontal_bias="0.469"
        app:layout_constraintStart_toEndOf="@+id/followersTV"
        app:layout_constraintTop_toTopOf="@+id/followersTV" />


    <TextView
        android:id="@+id/workoutNrDisplay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="72dp"
        android:padding="5dp"
        android:text=""
        android:textAlignment="center"
        android:textColor="@color/apple_white"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/followingTV"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@+id/followersTV"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/profileBtn"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:adjustViewBounds="true"
        android:background="@drawable/mid_gray_circle_border_v2"
        android:scaleType="fitCenter"
        android:src="@drawable/app_icon_nobg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/username_profile_et" />

    <TextView
        android:id="@+id/Name_tv"
        android:layout_width="207dp"
        android:layout_height="24dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:autoSizeMaxTextSize="24sp"
        android:autoSizeMinTextSize="12sp"
        android:autoSizeTextType="uniform"
        android:text=""
        android:textColor="@color/apple_white"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/username_profile_et"
        android:layout_width="209dp"
        android:layout_height="20dp"
        android:autoSizeTextType="uniform"
        android:text=""
        android:textColor="@color/light_gray"
        app:layout_constraintStart_toStartOf="@+id/Name_tv"
        app:layout_constraintTop_toBottomOf="@+id/Name_tv" />

    <ImageButton
        android:id="@+id/searchFriendButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginEnd="8dp"
        android:background="@null"
        android:src="@drawable/search_ic"
        android:textColor="@color/light_gray"
        app:layout_constraintBottom_toBottomOf="@+id/userRequestsButton"
        app:layout_constraintEnd_toStartOf="@+id/userRequestsButton"
        app:layout_constraintTop_toTopOf="@+id/userRequestsButton"
        app:layout_constraintVertical_bias="0.0" />

    <ImageButton
        android:id="@+id/userRequestsButton"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="28dp"
        android:background="@null"
        android:src="@drawable/heart_ic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="Followers"
        android:textColor="@color/light_gray"
        app:layout_constraintEnd_toEndOf="@+id/followersTV"
        app:layout_constraintStart_toStartOf="@+id/followersTV"
        app:layout_constraintTop_toBottomOf="@+id/followersTV" />


</androidx.constraintlayout.widget.ConstraintLayout>