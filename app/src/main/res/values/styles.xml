<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="PopupAnimation" parent="@android:style/Animation">
        <item name="android:windowEnterAnimation">@anim/popup_slide_in</item>
        <item name="android:windowExitAnimation">@anim/popup_slide_out</item>
    </style>

    <style name="CustomCalendarTheme" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:calendarTextColor">@color/shiny_green</item>
    </style>

    <style name="CustomCalendarDay" parent="@android:style/TextAppearance.Medium">
        <item name="android:textColor">@color/shiny_green</item>
        <!-- Add more customizations as needed -->
    </style>

    <style name="Button1" parent="Widget.AppCompat.Button.Colored">
        <item name="android:background">@drawable/mid_gray_rounded_corners_border</item>
        <item name="android:minWidth">200dp</item>
        <item name="android:textColor">#FFF</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>
    <style name="TextyButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="TransparentToolbar" parent="@style/ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="windowActionBarOverlay">true</item>
    </style>
</resources>